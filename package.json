{
  "name": "@terminus/design-tokens",
  "version": "1.0.0",
  "description": "The collection of Terminus design tokens.",
  "homepage": "https://github.com/GetTerminus/design-tokens",
  "author": "@terminus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GetTerminus/design-tokens.git"
  },
  "bugs": {
    "url": "https://github.com/GetTerminus/design-tokens/issues"
  },
  "private": false,
  "main": "build.js",
  "scripts": {
    "////////// Section: Build": "==============================",
    "prebuild": "yarn run clean",
    "build": "node index.js",
    "postbuild": "yarn run copy-files",
    "prewatch": "yarn run clean",
    "watch": "yarn run build && chokidar  \"{properties,ui-library}/**/*.js\" -c \"yarn run build\"",
    "clean": "rm -rf build",
    "////////// Section: Linting": "==============================",
    "lint:ci": "npx eslint \"**/*.js\" --config .eslintrc.js",
    "lint": "yarn run lint:ci --fix",
    "////////// Section: Documentation": "==============================",
    "docs": "yarn run docs:toc",
    "docs:toc": "find . -path ./node_modules -prune -o -path ./build -prune -o -path ./.github -prune -o -path ./.git -prune -o -path ./CHANGELOG.md -prune -o -path ./CODE_OF_CONDUCT.md -prune -o -name '*.md' -print |  xargs npx doctoc --title '**Table of Contents**' --maxlevel 4",
    "////////// Section: Tooling": "==============================",
    "lint-staged": "lint-staged",
    "validate:circleci": "circleci config validate",
    "cm": "npx git-cz",
    "////////// Section: Release": "==============================",
    "copy-files": "npx copyfiles package.json LICENSE README.md build/ && echo 'Package files copied.'",
    "semantic-release": "semantic-release",
    "check:next-release": "npx semantic-release --no-ci --dry-run"
  },
  "lint-staged": {
    "*.js": "yarn run lint"
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "lint-staged && yarn run docs:toc"
    }
  },
  "config": {
    "loglevel": "warn",
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./cz-config.js"
    }
  },
  "publishConfig": {
    "tag": "next"
  },
  "release": {
    "========TODO": "Change to 'release' once https://github.com/GetTerminus/discworld/issues/66 lands.",
    "branch": "master",
    "plugins": [
      [
        "@semantic-release/release-notes-generator",
        {
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          },
          "writerOpts": {
            "commitsSort": [
              "subject",
              "scope"
            ]
          }
        }
      ],
      "@semantic-release/git"
    ],
    "verifyConditions": [
      "condition-circle",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      {
        "path": "@semantic-release/git",
        "message": "Add ${nextRelease.version} release notes [skip ci]"
      }
    ],
    "publish": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": true,
        "pkgRoot": "build/"
      },
      {
        "path": "@semantic-release/github",
        "assets": [
          "CHANGELOG.md"
        ],
        "npmPublish": false
      }
    ]
  },
  "engines": {
    "node": ">= 12.0.0",
    "npm": ">= 5.0.0",
    "yarn": ">= 1.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/exec": "^3.3.6",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/github": "^5.4.3",
    "@semantic-release/npm": "^5.1.15",
    "@semantic-release/release-notes-generator": "^7.3.0",
    "@terminus/eslint-config-frontend": "^1.1.1",
    "@typescript-eslint/parser": "^2.19.0",
    "chokidar-cli": "^2.1.0",
    "circleci": "^0.3.3",
    "commitizen": "^4.0.3",
    "condition-circle": "^2.0.2",
    "copyfiles": "^2.2.0",
    "cz-customizable": "^6.2.0",
    "doctoc": "^1.4.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "style-dictionary": "^2.8.3",
    "typescript": "^3.7.5",
    "validate-commit-msg": "^2.14.0"
  }
}
